@model Pedagog_MVC.Models.Ucenik_obrazovna_postignuca

<script src="@Url.Content("~/Scripts/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Info o odabranom postignucu ucenika</h4>
        </div>
        @using (Ajax.BeginForm("InfoPostignuce", "ListaPracenja", new AjaxOptions
        {
            HttpMethod = "Get",


        }, new { @class = "form-horizontal", role = "form" }))


        {
            <div class="modal-body">
                <div class="form-horizontal">


                    <div class="row">
                        <div class="col-md-2">
                            <b>Napomena:</b>
                        </div>
                        <div class="col-md-10">
                            @Model.napomena
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <b>Razred:</b>
                        </div>
                        <div class="col-md-10">
                            @Model.razred
                        </div>
                    </div>
                    

                    <div class="modal-footer">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">

                                <a href="@Url.Action("Tables_Ucenici_Lista")" class="btn btn-default btn-md btn-grad">Povratak</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>


