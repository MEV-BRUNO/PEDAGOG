@model ProjektIdio.Models.Ucenik

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>


<div class="col-lg-9">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <form class="form-horizontal">
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="control-label col-lg-12">Odabrani učenik: @Model.ime_prezime</label>
                        </div>
                    </div>
                    <div class="col-lg-5">

                        <div class="form-group">
                            <label class="control-label col-lg-5">Školska godina:</label>
                            <div class="col-lg-7">
                                <select class="form-control">
                                    <option>2017./2018.</option>
                                    <option>2016./2017.</option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4">
                    </div>
                </form>
            </div><!--END ROW -->

            <div class="panel-body">
                <ul class="nav nav-pills">
                    <li class="active">
                        <a href="~/#osobni" data-toggle="tab">Osobni podaci</a>
                    </li>
                </ul>

                <div class="tab-content">

                    @using (Ajax.BeginForm("OsobniPartial", "OsobniPodaci", new AjaxOptions
                    {
                        HttpMethod = "Post",
                        OnSuccess = "EditSuccess"

                    }, new { @class = "form-horizontal", role = "form" }))
                    {

                        <div class="tab-pane fade in active" id="osobni">
                            <h4>Osobni podaci</h4>
                            <form class="form-horizontal">
                                <div class="form-group">
                                    @Html.HiddenFor(model => model.id_ucenik)
                                    @Html.HiddenFor(model => model.biljeska)
                                    @Html.HiddenFor(model => model.spol)


                                    <label for="text1" class="control-label col-lg-2">Ime i prezime</label>

                                    <div class="col-lg-6">
                                        @Html.EditorFor(model => model.ime_prezime, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ime_prezime, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2">Razredni odjel:</label>
                                    <div class="col-lg-6">
                                        <select class="form-control">
                                            <option>5C</option>
                                            <option>6A</option>
                                            <option>6B</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-2">Datum rođenja</label>
                                    <div class="col-lg-6">
                                        @Html.EditorFor(model => model.datum, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.datum, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-2">OIB</label>
                                    <div class="col-lg-6">
                                        @Html.EditorFor(model => model.oib, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.oib, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="limiter" class="control-label col-lg-2">Adresa stanovanja</label>

                                    <div class="col-lg-6">
                                        @Html.EditorFor(model => model.adresa, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.adresa, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-2">Mjesto stanovanja</label>
                                    <div class="col-lg-6">
                                        @Html.EditorFor(model => model.grad, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.grad, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="text4" class="control-label col-lg-2"></label>
                                    <div class="col-lg-8">
                                        <a href="@Url.Action("Tables_Ucenici_Popis_Osobni")" class="btn btn-success" onclick="$(this).closest('form').submit()">Potvrdi</a>
                                        <a href="@Url.Action("Tables_Ucenici_Popis_Osobni")" class="btn btn-danger btn-md btn-grad">Odustani</a>

                                    </div>
                                </div>
                            </form>
                        </div><!--END osobni podaci -->
                    }

                </div>
            </div>

        </div>
    </div><!--END COL 9 -->
</div> <!--END ROW -->
