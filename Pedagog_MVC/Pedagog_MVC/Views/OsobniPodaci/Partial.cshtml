@model IEnumerable<ProjektIdio.Models.Ucenik>


@foreach (ProjektIdio.Models.Ucenik uc in Model)
{

    <tr>
        <td class="col-md-2">@uc.id_ucenik.</td>
        <td class="col-md-10">
            @Ajax.ActionLink(uc.ime_prezime, "OsobniPartial", new { id = uc.id_ucenik }, new AjaxOptions
       {
           HttpMethod = "GET",
           UpdateTargetId = "osobni",
           InsertionMode = InsertionMode.Replace
       })
        </td>
    </tr>
}