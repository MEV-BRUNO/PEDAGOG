@model ProjektIdio.Models.Nastavnik



<script src="@Url.Content("~/Scripts/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Dodavanje novog učitelja/nastavnika</h4>
        </div>
        @using (Ajax.BeginForm("DodajNastavnika", "Nastavnik", new AjaxOptions
        {
            HttpMethod = "Post",
            OnSuccess = "CreateSuccess"

        }, new { @class = "form-horizontal", role = "form" }))


        {
            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.id_nastavnik, new { Value = 0 })
                    <div class="form-group">
                        @Html.LabelFor(model => model.ime_prezime, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.ime_prezime, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ime_prezime, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.id_skola, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DropDownListFor(m => m.id_skola, new SelectList(ViewBag.skole, "Value", "Text"), "Odaberi školu", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.id_skola, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.titula, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.titula, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.titula, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.adresa, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.adresa, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.adresa, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <p>
                        @Html.ValidationSummary(true,
"Spremanje nije uspjelo. Popravite potrebne podatke i pokušajte ponovno!", new { @class = "text-danger" })
                    </p>

                    <div class="modal-footer">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a href="@Url.Action("TablesPopisNastavnika")" class="btn btn-success" onclick="$(this).closest('form').submit()">Potvrdi</a>
                                <a href="@Url.Action("TablesPopisNastavnika")" class="btn btn-default btn-md btn-grad">Odustani</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

