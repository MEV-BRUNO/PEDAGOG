                    </div>

                    <p>
                        @Html.ValidationSummary(true,
"Spremanje nije uspjelo. Popravite potrebne podatke i pokušajte ponovno!", new { @class = "text-danger" })
                    </p>

                    <div class="modal-footer">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a href="@Url.Action("UceniciPopisUcenici")" class="btn btn-primary" onclick="$(this).closest('form').submit()">Potvrdi</a>
                                <a href="@Url.Action("UceniciPopisUcenici")" class="btn btn-default btn-md btn-grad">Odustani</a>
