@model Pedagog_MVC.Models.Razredni_odjel

<script src="@Url.Content("~/Scripts/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Dodavanje novog kontakta</h4>
        </div>
        @using (Ajax.BeginForm("DodajPopis", "PopisUcenika", new AjaxOptions
        {
            HttpMethod = "Post",
            OnSuccess = "CreateSuccess"

        }, new { @class = "form-horizontal", role = "form" }))


        {
            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.id_odjel, new { Value = 0 })
                    <div class="form-group">
                        @Html.LabelFor(model => model.naziv, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.naziv, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.naziv, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.broj_m, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.broj_m, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.broj_m, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.broj_z, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.broj_z, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.broj_z, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.godina, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.godina, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.godina, "", new { @class = "text-danger" })
                        </div>
                    </div>                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.os_ss, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div>
                                @Html.RadioButtonFor(model => model.os_ss, 1) Srednja škola
                                @Html.RadioButtonFor(model => model.os_ss, 0) Osnovna škola
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.id_razrednik, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.id_odjel, new SelectList(ViewBag.nastavnici, "Value", "Text"), "Odaberi nastavnika", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.id_razrednik, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.program, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.program, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.program, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.razred, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.razred, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.razred, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.usmjerenje, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.usmjerenje, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.usmjerenje, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <p>
                        @Html.ValidationSummary(true,
"Spremanje nije uspjelo. Popravite potrebne podatke i pokušajte ponovno!", new { @class = "text-danger" })
                    </p>

                    <div class="modal-footer">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a href="@Url.Action("UceniciPopisUcenici")" class="btn btn-success" onclick="$(this).closest('form').submit()">Potvrdi</a>
                                <a href="@Url.Action("UceniciPopisUcenici")" class="btn btn-default btn-md btn-grad">Odustani</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
