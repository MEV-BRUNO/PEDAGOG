@model Pedagog_MVC.Models.Ucenik_protokol_pracenja

<script src="@Url.Content("~/Scripts/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Info o odabranom protokolu</h4>
        </div>
        @using (Ajax.BeginForm("InfoProtokol", "Protokol", new AjaxOptions
        {
            HttpMethod = "Get",


        }, new { @class = "form-horizontal", role = "form" }))


        {
            <div class="modal-body">
                <div class="form-horizontal">


                    <div class="row">
                        <div class="col-md-2">
                            <b>Datum:</b>
                        </div>
                        <div class="col-md-10">
                            @Model.datum
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <b>Cilj:</b>
                        </div>
                        <div class="col-md-10">
                            @Model.cilj
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <b>Doprinos:</b>
                        </div>
                        <div class="col-md-10">
                            @Model.doprinos
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <b>Godina:</b>
                        </div>
                        <div class="col-md-10">
                            @Model.godina
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <b>Odnos:</b>
                        </div>
                        <div class="col-md-10">
                            @Model.odnos
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <b>Opis:</b>
                        </div>
                        <div class="col-md-10">
                            @Model.opis
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <b>Prilagodljivost:</b>
                        </div>
                        <div class="col-md-10">
                            @Model.prilagodljivost
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <b>Soc-eko:</b>
                        </div>
                        <div class="col-md-10">
                            @Model.soc_eko
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <b>Vrijeme:</b>
                        </div>
                        <div class="col-md-10">
                            @Model.vrijeme
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <b>Zakljucak:</b>
                        </div>
                        <div class="col-md-10">
                            @Model.zakljucak
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">

                                <a href="@Url.Action("Protokol_Promatranja")" class="btn btn-default btn-md btn-grad">Povratak</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

