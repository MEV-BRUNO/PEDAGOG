@model IEnumerable<Pedagog_MVC.Models.Ucenik_protokol_pracenja>

<div class="table-responsive">
    <p>
        <a href="@Url.Action("DodajProtokol","Protokol", new { id= ViewBag.idUcenik })" data-toggle="modal" aria-hidden="true" class="btn btn-primary btn-xs btn-grad">Novi protokol </a>
    </p>
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Nadnevak</th>
                <th>Naziv </th>
                <th>Razredni odjel </th>
                <th>Šk. godina </th>
                <th>Aktivnost</th>
            </tr>
        </thead>
        <tbody>

            @foreach (Pedagog_MVC.Models.Ucenik_protokol_pracenja prot in Model)
            {
            <tr>
                <td class="col-md-1">@prot.datum</td>
                <td class="col-md-4">Protokol promatranja @prot.id_protokol</td>
                <td class="col-md-2">@ViewBag.baza.Razredi.Find(prot.id_odjel).naziv</td>
                <td class="col-md-1">@prot.godina</td>              
                <td class="col-md-2">
                    <a href="@Url.Action("Protokol_Promatranja_Uredi","Protokol",new { id = prot.id_protokol})" data-toggle="modal" aria-hidden="true" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                    <a href="@Url.Action("InfoProtokol","Protokol",new { id = prot.id_protokol})" data-toggle="modal" aria-hidden="true" class="btn btn-info btn-xs btn-grad">Otvori</a>
                    <a href="@Url.Action("ObrisiProtokol","Protokol",new { id = prot.id_protokol})" data-toggle="modal" aria-hidden="true" class="btn btn-danger btn-xs btn-grad">Briši</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

</div>